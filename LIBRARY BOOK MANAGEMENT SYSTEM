books = []
def add_book():
 title = input("Enter book title: ")
 author = input("Enter author name: ")
 books.append({'title': title, 'author': author})
 print("Book added successfully!")
def show_books():
 if not books:
 print("No books in the library.")
 else:
 print("\nLibrary Books:")
 for i, book in enumerate(books, start=1):
 print(f"{i}. {book['title']} by {book['author']}")
def remove_book(unwanted):
 if not books:
 print("NO book in the library")
 else:
 if unwanted not in books:
 print(f"There is no book named{unwanted}")
 else:
 print("Removed book:",books.remove(unwanted))
while True:
 print("\n--- Library Menu ---")
 print("1. Add Book")
 print("2. Show Books")
 print("3. Remove Book")
 print("4. Exit")
 choice = input("Enter your choice: ")
 if choice == '1':
 add_book()
 elif choice=='2':
 show_books()
 elif choice == '3':
 unwanted=input("Enter the book name which need to be removed:")
 unwanted=str(unwanted)
 remove_book(unwanted)
else:
 print(“Invaild Choice. Try Again”)
