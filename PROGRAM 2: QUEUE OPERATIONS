PROGRAM 2: QUEUE OPERATIONS
CODING:
class queue:
def __init__(self):
self.queue=[]
def enqueue(self,value,limit):
self.value=value
self.limit=limit
if(len(self.queue)==self.limit):
print("####OVERFLOW")
else:
self.queue.append(self.value)
def dequeue(self):
if self.queue==[]:
print("queue is empty")
else:
return self.queue.pop(0)
q=queue()
print("******WELCOM TO QUEUE OPERATIONS********")
limit=input("Enter the limit of the queue:")
limit=int(limit)
while True:
print("1.Enqueue a value")
print("2.Dequeue a value")
print("3.View the queue")
print("4.Exit the queue operation")
a=input("Enter the required operation:")
a=int(a)
if a==1:
value=input("Enetr the value to be pushed in queue:")
value=int(value)
q.enqueue(value,limit)
print(q.queue)
elif a==2:
print("Poped value:",q.dequeue())
elif a==3:
print("Queue=",q.queue)
elif a==4:
break
else:
print("invalid value")
