 if choice == '1':
 name = input("Enter student name: ")
 roll = input("Enter roll number: ")
course = input("Enter course name: ")
 student = {'name': name, 'roll': roll, 'course': course}
 students.append(student)
 print("Student registered.")
 elif choice == '2':
 if not students:
 print("No students.")
 else:
 for s in students:
 print("Name:", s['name'])
 print("Roll:", s['roll'])
 print("Course:", s['course'])
 print()
 elif choice == '3':
 roll = input("Enter roll number: ")
 found = False
 for s in students:
 if s['roll'] == roll:
 print("Name:", s['name'])
 print("Course:", s['course'])
 found = True
 break
 if not found:
